{
  "coc.preferences.formatOnSaveFiletypes": ["go", "javascript"],
  "tsserver.npm": "/home/vagrant/.asdf/shims/npm",
  "tsserver.formatOnType": false,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "http://json.schemastore.org/circleciconfig": ".circleci/*",
    "https://raw.githubusercontent.com/OAI/OpenAPI-Specification/master/schemas/v3.0/schema.json": ".swagger/*"
  },
  "languageserver": {
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
